<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:background="@color/bg_max_3d" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/layout_header" layout="@layout/layout_single_action_header"/>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="0dp" android:fillViewport="true" android:layout_weight="1">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:padding="@dimen/layout_padding_normal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/logo_max_3d" android:contentDescription="@null"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/max_3d_sub_text" android:id="@+id/tv_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_padding_normal"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/max_3d_sub_text" android:id="@+id/tv_period" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_padding_small" android:layout_marginBottom="@dimen/layout_padding_medium"/>
            <include android:id="@+id/layout_max_3d_result" layout="@layout/layout_max_3d_item"/>
            <include layout="@layout/layout_ads_medium_banner"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_prize_quantity" android:background="@drawable/bg_max_3d_item" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_padding_medium" android:layout_marginBottom="@dimen/layout_padding_medium" android:layout_marginVertical="@dimen/layout_padding_medium"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
