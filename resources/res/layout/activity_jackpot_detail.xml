            <androidx.gridlayout.widget.GridLayout android:id="@+id/table" android:background="@drawable/bg_mega_item" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/layout_padding_large" android:layout_marginBottom="@dimen/layout_padding_small"/>
            <include layout="@layout/layout_ads_medium_banner"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
